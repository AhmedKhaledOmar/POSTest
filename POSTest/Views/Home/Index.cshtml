@section Scripts
{
    <script type="text/javascript">
        
        var selectedIdForEdit = 0;

        $(document).on('click', '.add-size', function(){
            var size = $('div[for="sizes"]:first').clone();

            size.find('.add-size').addClass('remove-size');
            size.find('.add-size').addClass('btn-danger');
            size.find('.add-size').text('Remove');
            size.find('.add-size').removeClass('add-size');
            $('#frmItem .modal-body').append(size);
        });

        $(document).on('click', '.remove-size', function () {
            $(this).closest('div[for="sizes"]').remove();
        }); 

        function AddItem()
        {
            const fullName = document.getElementsByClassName('ItemNameClass');
            const arrOfItemName = [...fullName].map(input => input.value);

            const fullSize = document.getElementsByClassName('ItemPriceClass');
            const arrOfItemPrice = [...fullSize].map(input => input.value);

            var itemPricevalue = document.getElementById("ItemPriceId").value;
            var itemNameValue = document.getElementById("ItemNameId").value;


            var itemPhotoValue = document.getElementById("customFile").value;
            //var fileInput = document.getElementById('customFile');
            //var itemPhotoValue = fileInput.files[0];
            
            var items = []

            // JSON.stringify(
            var product = JSON.stringify( {
                    'ItemName': itemNameValue,
                    'Price': itemPricevalue,
                    'Image':itemPhotoValue ,
                    'SizeNames':arrOfItemName,
                    'SizePrices':arrOfItemPrice
            });

             console.log(product);
            $.ajax({
                url: '/Home/Save',
                type: 'POST',
                contentType: 'application/json',
                data: product,
                success: function (data) {
                    location.reload();
                },
                });
        }
        

        function UpdateDialogWithModel(index)
        {
            var list = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(@Model.Items));
            list[index]
            

            document.getElementById("ItemPriceId").value = list[index].Price;
            document.getElementById("ItemNameId").value =  list[index].Name;

            selectedIdForEdit = list[index].Id;

        }

        function DeleteItem(index){
            //var list = Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Items));
            //;
               $.ajax({
                url: '/Home/Delete/' + index ,
                type: 'DELETE',
                contentType: 'application/json',
                success: function (data) {
                    location.reload();
                },
                });
        }
       
      //  });
    </script>
}